    <script>
 var newWin=null;
 function LookupAccountPopup(name, id)
 {
  var url="/apex/LookupAccountPopup?id={!Account.Id}";
  newWin=window.open(url, 'Popup','height=500,width=600,left=100,top=100,resizable=no,scrollbars=yes,toolbar=no,status=no');
  if (window.focus)
  {
   newWin.focus();
  }
    
